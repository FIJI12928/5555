<body>
  <h1>กรอกรหัสผ่านเพื่อปลดล็อกภาพคำใบ้</h1>

  <input type="password" id="passwordInput" placeholder="รหัสผ่าน">
  <button onclick="checkPassword()">ตกลง</button>

  <div id="error"></div>

  <img id="clueImage" alt="คำใบ้">

  <script>
    const correctPassword = "cheese";
    const imageURL = "https://i.postimg.cc/fTgrGQ4D/image.jpg"; // URL จริงของภาพ

    function checkPassword() {
      const input = document.getElementById("passwordInput").value;
      const clueImage = document.getElementById("clueImage");
      const error = document.getElementById("error");

      if (input.toLowerCase() === correctPassword) {
        clueImage.src = imageURL;
        clueImage.style.display = "block";
        error.textContent = "";
      } else {
        clueImage.src = "";
        clueImage.style.display = "none";
        error.textContent = "รหัสผ่านไม่ถูกต้อง ลองใหม่อีกครั้ง";
      }
    }
  </script>
</body>
